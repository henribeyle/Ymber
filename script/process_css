#!/usr/bin/env ruby

require File.dirname(__FILE__) + '/../config/boot'

color_hash = {
  '#title#' => 'white',
  '#item#' => 'gold',
  '#item-placeholder#' => 'yellow',
  '#tags#' => 'white',
  '#tags-filter#' => 'gold',
  '#tags-dragged#' => 'yellow',
  '#dropping-into#' => 'orange',
  '#selector-back#' => '#000',
  '#selector-front#' => '#fff',
  '#editor-back#' => '#000',
  '#editor-front#' => '#fff',
}

# (◕ ” ◕)
# #490A3D  lila
# #BD1550  rosa
# #E97F02  naranja
# #F8CA00  amarillo
# #8A9B0F  verde
# http://www.colourlovers.com/palette/(%E2%97%95%20%E2%80%9D%20%E2%97%95)

eyes = {
  '#title#' => '#BD1550',
  '#item#' => '#8A9B0F',
  '#item-placeholder#' => '#F8CA00',
  '#tags#' => '#E97F02',
  '#tags-filter#' => '#8A9B0F',
  '#tags-dragged#' => '#E97F02',
  '#dropping-into#' => '#490A3D',
  '#selector-back#' => 'black',
  '#selector-front#' => 'white',
  '#editor-back#' => 'black',
  '#editor-front#' => 'white',
}

# same old thing
# #293652 azul fuerte
# #356770 azul medio
# #49927F azul flojo (turquesa)
# #78B058 verde fuerte
# #ACC255 verde medio
# http://www.colourlovers.com/palette/Same%20Old%20Thing

same_old_thing = {
  '#title#' => '#356770',
  '#item#' => '#49927F',
  '#item-placeholder#' => '#ACC255',
  '#tags#' => '#78B058',
  '#tags-filter#' => '#49927F',
  '#tags-dragged#' => '#78B058',
  '#dropping-into#' => '#293652',
  '#selector-back#' => 'black',
  '#selector-front#' => 'white',
  '#editor-back#' => 'black',
  '#editor-front#' => 'white',
}

# summer of love
# #423B36 grey
# #4E5756 grey blue
# #6F755B grey green
# #B59F5C grey brown
# #E89856 orange
# http://www.colourlovers.com/palette/summer%20of%20love

summer_of_love = {
  '#title#' => '#4E5756',
  '#item#' => '#6F755B',
  '#item-placeholder#' => '#E89856',
  '#tags#' => '#B59F5C',
  '#tags-filter#' => '#6F755B',
  '#tags-dragged#' => '#B59F5C',
  '#dropping-into#' => '#423B36',
  '#selector-back#' => 'black',
  '#selector-front#' => 'white',
  '#editor-back#' => 'black',
  '#editor-front#' => 'white',
}

# #423B36 grey
# #4E5756 grey blue
# #6F755B grey green
# #B59F5C grey brown
# #E89856 orange

# warp!
# #3B0C2C purple
# #FF6A00 orange
# #FFC300 yellow
# #D2FF1F green
# #FAF4E0 white
# http://www.colourlovers.com/palette/w.a.r.p.!

warp = {
  '#title#' => '#FF6A00',
  '#item#' => '#FFC300',
  '#item-placeholder#' => '#FAF4E0',
  '#tags#' => '#D2FF1F',
  '#tags-filter#' => '#FFC300',
  '#tags-dragged#' => '#D2FF1F',
  '#dropping-into#' => '#3B0C2C',
  '#selector-back#' => 'black',
  '#selector-front#' => 'white',
  '#editor-back#' => 'black',
  '#editor-front#' => 'white',
}

color_hash=warp # default
color_hash=eyes           if ARGV[0] == 'eyes'
color_hash=same_old_thing if ARGV[0] == 'same_old_thing'
color_hash=summer_of_love if ARGV[0] == 'summer_of_love'
color_hash=warp           if ARGV[0] == 'warp'

SRC_FILE = File.join(RAILS_ROOT,'config','main.css')
DST_FILE = File.join(RAILS_ROOT,'public','stylesheets','main.css')

if !File.exists?(SRC_FILE) then
  puts "src file: '#{SRC_FILE}' does not exist"
  exit
end

lines = IO.readlines(SRC_FILE)
lines.map! do |x|
  if x =~ /#.+#/
    color_hash.each do |c,t|
      x.gsub!(c,t)
    end
  end
  x
end

File.open(DST_FILE, "w") { |f| f.puts lines.join() }
